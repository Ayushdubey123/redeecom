                   <form action="/addattribute?id=<%=category %>" method="post">
                    <div class="card" style="font-size: 2rem; font-weight: 800;  margin-left: 2rem; margin-right: 2rem; ">
                        <div class="div" style="margin-left: 10px; padding: 2%;">
                        Add Attributes&nbsp;<i class="fas fa-paperclip"></i>
                        </div>
                    </div>
                  <div class="card-body" style="margin-top:3rem; background-color: rgb(255, 255, 255); margin-left: 2rem; margin-right: 2rem;">
                        
                    
              
                    <div class="row">
                            <div class="col-sm-4">
                              <div class="form-group">
                                <label>Field Name:</label>
                                <input type="text" class="form-control" name="att_name"  style="height: 3rem;"  placeholder="Enter Field Name" required>
                                                               
                              </div>
                          
                              
                            </div>
                            
                            <div class="col-sm-4">
                                <div class="form-group">
                                  <label>Field Type:</label>
                                  <select class="form-control" name="att_type"   style="height: 3rem;"   required>
                                    <option >Select Type</option>
                                 <% var i=0; field.forEach(function(data){%>


                                    <option    value="<%= i %>"><%= data %></option>
                                 <% i++ })%>
                                  
                                </select>                             
                                </div>
  
                              </div>
                              <div class="col-sm-4">
                                <div class="form-group">
                                  <label>Position Type:</label>
                                  <select class="form-control" name="att_position"  style="height: 3rem;"   required>
                                    <option >Select Position Type</option>
                                    <option value="0"   >Global</option>
                                    <option value="1">Local</option>
                                </select>                             
                                </div>
                            
                                
                              </div>
                                                       
                              
                            
                    
                        
    
                          </div>
                          <div class="row">
                          
                           
                              <div class="col-sm-4">
                                <div class="form-group">
