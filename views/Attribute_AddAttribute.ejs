                                  <select  class="form-control" name="isparent"  style="height: 3rem;"  required>
                                     
                                        <option value="0">No</option>
                                        <%
                                        if(parent.length!=0){
                                        var i=1;
                                        parent.forEach(function(data){
                                        %>
                                        <option value="<%= data.att_id; %>">   <%= data.att_name; %>
                                        </option>
                                        <% }) } %>
                                    </select>
                                </div>
                            
                                
                              </div>
