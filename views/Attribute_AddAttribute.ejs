                                  <select  class="form-control" name="att_number"  style="height: 3rem;"  required>
                                        <option>Select Number</option>
                                        <option value="0" >Single</option>
                                        <option value="1" >Multiple</option>
                                        
                                    </select>
                                </div>
                            
                                
                              </div>
